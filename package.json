{
    "name": "react-aws-s3-typescript",
    "version": "1.1.4",
    "description": "Open source npm package to upload your files into AWS S3 Bucket directly using react(typescript template)",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "echo \"No specified test yet\"",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NimperX/react-aws-s3-typescript.git"
    },
    "keywords": [
        "react",
        "react-component",
        "aws",
        "s3",
        "upload",
        "typescript",
        "file-upload",
        "file",
        "react-aws-s3",
        "react-aws-s3-typescript"
    ],
    "author": "Nimper",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/NimperX/react-aws-s3-typescript/issues"
    },
    "homepage": "https://github.com/NimperX/react-aws-s3-typescript#readme",
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/node": "^14.17.18",
        "jest": "^26.6.3",
        "prettier": "^2.4.1",
        "ts-jest": "^26.5.6",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "@types/aws-sdk": "^2.7.0",
        "@types/crypto-js": "^4.0.2",
        "aws-sdk": "^2.993.0",
        "buffer": "^6.0.3",
        "crypto-js": "^4.1.1",
        "short-uuid": "^4.2.0"
    },
    "files": [
        "dist/**/*"
    ]
}
